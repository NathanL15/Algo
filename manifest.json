{
  "manifest_version": 3,
  "name": "Algo! - LeetCode Smart Hint Chatbot",
  "version": "1.0",
  "description": "An AI-powered tutor that provides step-by-step hints for LeetCode problems",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["config.js"],
    "matches": ["https://leetcode.com/*"]
  }]
} 